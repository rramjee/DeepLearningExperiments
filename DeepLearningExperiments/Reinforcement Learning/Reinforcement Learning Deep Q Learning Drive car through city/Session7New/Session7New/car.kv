#:kivy 1.0.9
# ref: https://kivy.org/docs/tutorials/pong.html

        
<Car>:
    size: 20, 10
    origin: 10, 5
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            pos: self.pos
            size: self.size
            source: "./images/car.png"
        PopMatrix

<Ball1>:
    size: 10,10
    canvas:
        Color:
            rgba: 0.48,0.97,0.74,0.3
        Ellipse:
            pos: self.pos
            size: self.size
<Ball2>:
    size: 10,10
    canvas:
        Color:
            rgba: 0.48,0.97,0.74,0.3
        Ellipse:
            pos: self.pos
            size: self.size

<Ball3>:
    size: 10,10
    canvas:
        Color:
            rgba: 0.48,0.97,0.74,0.3
        Ellipse:
            pos: self.pos
            size: self.size
    
<Joker>:
    canvas:
        PushMatrix
        Rectangle:
            pos: 345,74
            source: "./images/joker.png"
        PopMatrix
<Rach>:
    canvas:
        PushMatrix
        Rectangle:
            pos: 211,373
            source: "./images/rachael.png"
        PopMatrix


<Game>:
    car: game_car
    ball1: game_ball1
    ball2: game_ball2
    ball3: game_ball3
    joker: game_joker
    rach: game_rach
    canvas:
        Rectangle:
            pos: self.pos
            size: 457, 455
            source: "./images/citymap.png"

    Car:
        id: game_car
        center: self.parent.center
    Ball1:
        id: game_ball1
        center: self.parent.center
    Ball2:
        id: game_ball2
        center: self.parent.center
    Ball3:
        id: game_ball3
        center: self.parent.center
    Joker:
        id: game_joker
        center: self.parent.center
    Rach:
        id: game_rach
        center: self.parent.center
        